<p id="notice"><%= notice %></p>

<h3><%= @list.name %> [<%= link_to 'Edit', edit_list_path(@list) %>]</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Context</th>
    <th>Due date</th>
  </tr>

<% @list.action_items.each do |action_item| %>
  <tr>
    <td><%= action_item.name %></td>
	<td><%= action_item.context %></td>
    <td><%= action_item.due_date %></td>
	<td><%= link_to "X", list_action_item_url(@list,action_item), :method => :delete %>
  </tr>
<% end %>
</table>

<%= link_to "New Action Item", new_list_action_item_url(@list) %>





