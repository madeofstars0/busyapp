<% @action_items.each do |action_item| %>
  <tr>
    <td><%= action_item.list.name %></td>
    <td><%= action_item.context %></td>
    <td><%= action_item.name %></td>
    <td><%= action_item.description %></td>
    <td><%= action_item.due_date %></td>
    <td><%= action_item.is_complete %></td>
    <td><%= action_item.completed_at %></td>
  </tr>
<% end %>
</table>

